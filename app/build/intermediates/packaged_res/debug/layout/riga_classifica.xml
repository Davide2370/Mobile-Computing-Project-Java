<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/rigaClassifica"
    android:background="@color/coloreScritte"
    >

    <!-- LinearLayout Orizzontale per Immagine, Nome, ed Esperienza -->
    <LinearLayout
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/posizioneClassifica"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/playerImage"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/profile_pic" />


        <TextView
            android:id="@+id/playerName"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15sp" />

    <!-- TextView per l'Esperienza -->
        <TextView
            android:id="@+id/experiencePoints"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Experience Points"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>



</TableRow>
