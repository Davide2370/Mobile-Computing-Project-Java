<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/rigaClassifica"
    android:background="@color/coloreScritte"
    >

    <!-- LinearLayout Orizzontale per Immagine, Nome, ed Esperienza -->
    <LinearLayout
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- ImageView per l'Immagine -->


        <ImageView
            android:id="@+id/objectImage"
            android:layout_width="82dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/profile_pic" />


        <TextView
            android:id="@+id/objectName"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/objectLevel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Livello"
            android:textColor="#000000"
            android:textSize="15sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout"
            android:layout_width="62dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">


            <ImageView
                android:id="@+id/objectIsNear"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:scaleType="fitCenter"
                android:src="@drawable/x_circle_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>



</TableRow>
